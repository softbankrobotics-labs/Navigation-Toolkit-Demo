<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softbankrobotics.dx.navigationtoolkitdemo.StartActivity">

    <include
        android:id="@+id/homeButton"
        layout="@layout/home_button" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosb"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mappingMenuTextView"
        style="@style/DarkBlueBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_map"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <FrameLayout
        android:id="@+id/mappingMenuContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="34dp"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mappingMenuTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>